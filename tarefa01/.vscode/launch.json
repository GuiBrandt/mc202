{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Make and debug project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/megasena",
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Make project",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}